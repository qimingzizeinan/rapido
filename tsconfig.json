{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "sourceMap": true,
    "target": "esnext",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,

    "allowJs": true,
    "noImplicitAny": false,
    "noImplicitThis": false,

    "declaration": true, /* 生成相关的 '.d.ts' 文件。 */ 
    // "declarationDir": "./types", /* '.d.ts' 文件输出目录 */ 
    // "emitDeclarationOnly": true, /* 只生成声明文件，不生成 js 文件*/ 

    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "types": ["node", "jest"],
    "paths": {
      "shell/*": ["packages/shell/src/*"],
      "fs/*": ["packages/fs/src/*"],
      "utils/*": ["packages/utils/*"],
      "cli/*": ["packages/cli/*"],
    }
  },
  "include": ["src","packages/*/src"]
}
